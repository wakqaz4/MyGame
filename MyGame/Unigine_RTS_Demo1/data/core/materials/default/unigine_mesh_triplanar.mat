<materials version="1.00" editable="0">
	
	<!--
	/**************************************************************************\
	*
	* Mesh triplanar materials
	*
	\**************************************************************************/
	-->
	
	<!--
	/* Mesh triplanar base material
	 */
	-->
	<material name="mesh_triplanar_base" editable="0">
		
		<!-- states -->
		<state name="alpha_fade" hidden="1" type="toggle">0</state>
		<state name="deferred" type="switch" items="none,default">1</state>
		<state name="auxiliary" type="switch" items="none,default">0</state>
		<state name="ambient" type="switch" items="none,opacity,transparent,lightmap">1</state>
		<state name="light_prob" type="switch" items="none,default">0</state>
		<state name="light_spot" type="switch" items="none,default">1</state>
		<state name="light_omni" type="switch" items="none,default">1</state>
		<state name="light_proj" type="switch" items="none,default">1</state>
		<state name="light_world" type="switch" items="none,default">1</state>
		<state name="separable" type="toggle">0</state>
		<state name="volumetric" type="toggle">0</state>
		
		<!-- wireframe shaders -->
		<shader pass="wireframe" object="mesh_static"
			defines="BASE_WIREFRAME"
			vertex="core/shaders/default/mesh/vertex_base.shader"
			geometry="core/shaders/default/common/geometry_base_wireframe.shader"
			fragment="core/shaders/default/common/fragment_base_wireframe.shader"/>
		
		<!-- deferred shaders -->
		<shader pass="deferred" object="mesh_static"
			defines="BASE_DEFERRED,TRIPLANAR"
			alpha_fade_defines=",ALPHA_FADE"
			deferred="1"
			separable_defines=",SEPARABLE"
			volumetric_defines=",VOLUMETRIC"
			vertex="core/shaders/default/mesh/vertex_base.shader"
			fragment="core/shaders/default/mesh/fragment_triplanar_deferred.shader"/>
		
		<!-- auxiliary shaders -->
		<shader pass="auxiliary" object="mesh_static"
			defines="BASE_AUXILIARY"
			auxiliary="1"
			vertex="core/shaders/default/mesh/vertex_base.shader"
			fragment="core/shaders/default/mesh/fragment_base_auxiliary.shader"/>
		
		<!-- ambient shaders -->
		<shader pass="ambient" object="mesh_static"
			defines="BASE_AMBIENT,AMBIENT,TRIPLANAR"
			alpha_fade_defines=",ALPHA_FADE"
			ambient_defines="0,OPACITY,TRANSPARENT,LIGHTMAP"
			separable_defines=",SEPARABLE"
			vertex="core/shaders/default/mesh/vertex_base.shader"
			fragment="core/shaders/default/mesh/fragment_triplanar_ambient.shader"/>
		
		<!-- light prob shaders -->
		<shader pass="light_prob" object="mesh_static"
			defines="BASE_LIGHT_PROB,PROB,TRIPLANAR"
			alpha_fade_defines=",ALPHA_FADE"
			light_prob="1"
			separable_defines=",SEPARABLE"
			vertex="core/shaders/default/mesh/vertex_base.shader"
			fragment="core/shaders/default/mesh/fragment_triplanar_light_prob.shader"/>
		
		<!-- light spot shaders -->
		<shader pass="light_spot" object="mesh_static"
			defines="BASE_LIGHT_SPOT,SPOT,TRIPLANAR"
			alpha_fade_defines=",ALPHA_FADE"
			light_spot="1"
			separable_defines=",SEPARABLE"
			vertex="core/shaders/default/mesh/vertex_base.shader"
			fragment="core/shaders/default/mesh/fragment_triplanar_light_spot.shader"/>
		
		<!-- light omni shaders -->
		<shader pass="light_omni" object="mesh_static"
			defines="BASE_LIGHT_OMNI,OMNI,TRIPLANAR"
			receive_shadow_defines=",SHADOW"
			alpha_fade_defines=",ALPHA_FADE"
			light_omni="1"
			separable_defines=",SEPARABLE"
			vertex="core/shaders/default/mesh/vertex_base.shader"
			fragment="core/shaders/default/mesh/fragment_triplanar_light_omni.shader"/>
		
		<!-- light proj shaders -->
		<shader pass="light_proj" object="mesh_static"
			defines="BASE_LIGHT_PROJ,PROJ,TRIPLANAR"
			receive_shadow_defines=",SHADOW"
			alpha_fade_defines=",ALPHA_FADE"
			light_proj="1"
			separable_defines=",SEPARABLE"
			vertex="core/shaders/default/mesh/vertex_base.shader"
			fragment="core/shaders/default/mesh/fragment_triplanar_light_proj.shader"/>
		
		<!-- light world shaders -->
		<shader pass="light_world" object="mesh_static"
			defines="BASE_LIGHT_WORLD,WORLD,TRIPLANAR"
			receive_world_shadow_defines=",SHADOW"
			alpha_fade_defines=",ALPHA_FADE"
			light_world="1"
			separable_defines=",SEPARABLE"
			vertex="core/shaders/default/mesh/vertex_base.shader"
			fragment="core/shaders/default/mesh/fragment_triplanar_light_world.shader"/>
		
		<!-- shadow shaders -->
		<shader pass="shadow" object="mesh_static"
			defines="BASE_SHADOW"
			alpha_fade_defines=",ALPHA_FADE"
			vertex="core/shaders/default/mesh/vertex_base.shader"
			fragment="core/shaders/default/mesh/fragment_base_shadow.shader"/>
		
		<!-- bindings -->
		<bind object="mesh_cluster" to="mesh_static"/>
		<bind object="mesh_clutter" to="mesh_static"/>
		<bind object="mesh_dynamic" to="mesh_static"/>
		<bind object="mesh_skinned" to="mesh_static"/>
		
		<!-- textures -->
		<texture name="diffuse_0" format="srgb" anisotropy="1">core/textures/mesh_base_diffuse.dds</texture>
		<texture name="diffuse_1" separable="1" format="srgb" anisotropy="1">core/textures/mesh_base_diffuse.dds</texture>
		<texture name="diffuse_2" separable="1" format="srgb" anisotropy="1">core/textures/mesh_base_diffuse.dds</texture>
		<texture name="normal_0" unit="3" pass="deferred,ambient,light_prob,light_spot,light_omni,light_proj,light_world" format="signed" anisotropy="1">core/textures/mesh_base_normal.dds</texture>
		<texture name="normal_1" separable="1" pass="deferred,ambient,light_prob,light_spot,light_omni,light_proj,light_world" format="signed" anisotropy="1">core/textures/mesh_base_normal.dds</texture>
		<texture name="normal_2" separable="1" pass="deferred,ambient,light_prob,light_spot,light_omni,light_proj,light_world" format="signed" anisotropy="1">core/textures/mesh_base_normal.dds</texture>
		<texture name="specular_0" unit="6" pass="deferred,ambient,light_prob,light_spot,light_omni,light_proj,light_world" format="srgb" anisotropy="1">core/textures/mesh_base_specular.dds</texture>
		<texture name="specular_1" separable="1" pass="deferred,ambient,light_prob,light_spot,light_omni,light_proj,light_world" format="srgb" anisotropy="1">core/textures/mesh_base_specular.dds</texture>
		<texture name="specular_2" separable="1" pass="deferred,ambient,light_prob,light_spot,light_omni,light_proj,light_world" format="srgb" anisotropy="1">core/textures/mesh_base_specular.dds</texture>
		<texture name="alpha_fade" alpha_fade="1" unit="10" type="alpha_fade"/>
		<texture name="environment" pass="ambient" unit="11" type="environment"/>
		<texture name="ambient" pass="ambient" unit="12" format="srgb">core/textures/mesh_base_ambient.dds</texture>
		<texture name="deferred_occlusion" pass="ambient" unit="13" type="deferred_occlusion"/>
		<texture name="lightmap" pass="ambient" ambient="3" unit="14" format="srgb">core/textures/mesh_base_lightmap.dds</texture>
		<texture name="deferred_light" pass="ambient" unit="15" type="deferred_light"/>
		<texture name="light_image" pass="light_omni,light_proj,light_world" unit="11" type="light_image"/>
		<texture name="light_color" pass="light_omni,light_proj,light_world" type="light_color"/>
		<texture name="light_depth" pass="light_omni,light_proj,light_world" type="light_depth"/>
		<texture name="light_noise" pass="light_omni,light_proj,light_world" type="light_noise"/>
		<texture name="light_vcube" pass="light_omni" type="light_vcube"/>
		
		<!-- parameters -->
		<parameter name="base_0_transform" type="expression" shared="1">vec4(1.0f,1.0f,0.0f,0.0f)</parameter>
		<parameter name="base_1_transform" separable="1" type="expression" shared="1">vec4(1.0f,1.0f,0.0f,0.0f)</parameter>
		<parameter name="base_2_transform" separable="1" type="expression" shared="1">vec4(1.0f,1.0f,0.0f,0.0f)</parameter>
		<parameter name="auxiliary_color" auxiliary="1" type="color" shared="1">1.0 1.0 1.0 1.0</parameter>
		<parameter name="environment_scale" type="slider" shared="1" min="0.0" max="4.0" flags="max_expand">1.0</parameter>
		<parameter name="lightmap_scale" ambient="3" type="slider" shared="1" min="0.0" max="4.0" flags="max_expand">1.0</parameter>
		<parameter name="triplanar_power" type="slider" shared="1" min="0.0" max="1.0" flags="log10,max_expand">2.0</parameter>
		<parameter name="diffuse_color" type="color" shared="1" flags="srgb">1.0 1.0 1.0 1.0</parameter>
		<parameter name="diffuse_scale" type="slider" min="0.0" max="4.0" flags="max_expand">1.0</parameter>
		<parameter name="normal_scale" type="slider" min="0.0" max="2.0" flags="max_expand">1.0</parameter>
		<parameter name="specular_color" type="color" shared="1" flags="srgb">1.0 1.0 1.0 1.0</parameter>
		<parameter name="specular_scale" type="slider" min="0.0" max="8.0" flags="max_expand">1.0</parameter>
		<parameter name="specular_power" type="slider" min="0.0" max="2.0" flags="log10,max_expand">16.0</parameter>
		<parameter name="phong_rim_width" type="slider" min="0.0" max="1.0">0.5</parameter>
		<parameter name="phong_rim_scale" type="slider" min="0.0" max="1.0">0.0</parameter>
		<parameter name="fresnel_bias" type="slider" min="0.0" max="1.0">1.0</parameter>
		<parameter name="fresnel_power" type="slider" min="0.0" max="1.0" flags="log10,max_expand">5.0</parameter>
	</material>
	
</materials>
