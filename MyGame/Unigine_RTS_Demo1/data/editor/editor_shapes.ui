<ui version="1.00">

<!--
/* Shape
 */
-->
<vbox name="Nodes::Object::Shape::main_vb" export="1" space="4">
	<vbox align="expand">
		
		<vbox>
			<hbox align="expand">
				<combobox name="Nodes::Object::Shape::shape_cb" export="1" align="expand">
					<text>Sphere shape</text>
					<text>Capsule shape</text>
					<text>Cylinder shape</text>
					<text>Box shape</text>
					<text>Convex shape</text>
					<text>Autogenerated</text>
				</combobox>
				<vbox space="2"/>
				<button>
					<text>Add</text>
					<callback type="clicked">Nodes::Object::Shape::add_clicked</callback>
				</button>
				<vbox space="2"/>
				<button name="Nodes::Object::Shape::remove_b" export="1">
					<text>Remove</text>
					<callback type="clicked">Nodes::Object::Shape::remove_clicked</callback>
				</button>
			</hbox>
		</vbox>
		
		<vbox space="2"/>
		
		<scrollbox align="expand" height="60">
			<listbox name="Nodes::Object::Shape::shapes_lb" export="1" align="expand">
				<callback type="changed">Nodes::Object::Shape::shapes_changed</callback>
			</listbox>
		</scrollbox>
		
		<vbox space="2"/>
		<vbox>
			<hbox align="expand">
				<vbox space="1"/>
				<button name="Nodes::Object::Shape::clone_b">
					<text>Clone</text>
					<callback type="clicked">Nodes::Object::Shape::clone_clicked</callback>
				</button>
			</hbox>
		</vbox>
		
		<vbox space="2"/>
		
		<vbox name="Nodes::Object::Shape::parameters_vb" export="1">
			<gridbox name="shape_parameters_gb" align="expand" columns="4" space="4">
				
				<label align="right"><text>Type:</text></label>
				<label name="Nodes::Object::Shape::type_l" export="1" align="left,expand"/>
				<vbox/>
				<vbox/>
				
				<vbox/>
				<checkbox name="Nodes::Object::Shape::enabled_cb" export="1" align="left,expand">
					<tooltip>The shape is enabled</tooltip>
					<text>Enabled</text>
					<callback type="clicked">Nodes::Object::Shape::enabled_clicked</callback>
				</checkbox>
				<vbox/>
				<vbox/>
				
				<vbox/>
				<checkbox name="Nodes::Object::Shape::continuous_cb" export="1" align="left,expand">
					<tooltip>Continuous collision detection</tooltip>
					<text>Continuous</text>
					<callback type="clicked">Nodes::Object::Shape::continuous_clicked</callback>
				</checkbox>
				<vbox/>
				<vbox/>
				
				<label align="right"><text>Name:</text></label>
				<editline name="Nodes::Object::Shape::name_el" export="1" align="expand">
					<tooltip>Name of the shape</tooltip>
					<callback type="pressed,focus_out">Nodes::Object::Shape::name_pressed</callback>
				</editline>
				<vbox/>
				<vbox/>
				
				<label align="right"><text>Intersection:</text></label>
				<hbox align="expand">
					<editline name="Nodes::Object::Shape::intersection_mask_el" export="1" align="expand">
						<tooltip>Intersection mask of the shape</tooltip>
						<text face="core/gui/console.ttf"/>
						<callback type="pressed,focus_out">Nodes::Object::Shape::intersection_mask_pressed</callback>
						<callback type="double_clicked">Nodes::Object::Shape::intersection_mask_clicked</callback>
					</editline>
					<icon texture="editor/gui/action_edit.png" width="24" height="24">
						<callback type="clicked">Nodes::Object::Shape::intersection_mask_clicked</callback>
						<tooltip>Edit mask</tooltip>
					</icon>
				</hbox>
				<vbox/>
				<vbox/>
				
				<label align="right"><text>Collision:</text></label>
				<hbox align="expand">
					<editline name="Nodes::Object::Shape::collision_mask_el" export="1" align="expand">
						<tooltip>Collision mask of the shape</tooltip>
						<text face="core/gui/console.ttf"/>
						<callback type="pressed,focus_out">Nodes::Object::Shape::collision_mask_pressed</callback>
						<callback type="double_clicked">Nodes::Object::Shape::collision_mask_clicked</callback>
					</editline>
					<icon texture="editor/gui/action_edit.png" width="24" height="24">
						<callback type="clicked">Nodes::Object::Shape::collision_mask_clicked</callback>
						<tooltip>Edit mask</tooltip>
					</icon>
				</hbox>
				
				<label align="right"><text>Exclusion:</text></label>
				<hbox align="expand">
					<editline name="Nodes::Object::Shape::exclusion_mask_el" export="1" align="expand">
						<tooltip>Exclusion mask of the shape</tooltip>
						<text face="core/gui/console.ttf"/>
						<callback type="pressed,focus_out">Nodes::Object::Shape::exclusion_mask_pressed</callback>
						<callback type="double_clicked">Nodes::Object::Shape::exclusion_mask_clicked</callback>
					</editline>
					<icon texture="editor/gui/action_edit.png" width="24" height="24">
						<callback type="clicked">Nodes::Object::Shape::exclusion_mask_clicked</callback>
						<tooltip>Edit mask</tooltip>
					</icon>
				</hbox>
				
				<label align="right"><text>Mass:</text></label>
				<editline name="Nodes::Object::Shape::mass_el" export="1" align="expand" validator="float">
					<tooltip>Mass of the shape</tooltip>
					<callback type="pressed,focus_out">Nodes::Object::Shape::mass_pressed</callback>
				</editline>
				<label align="right"><text>Density:</text></label>
				<editline name="Nodes::Object::Shape::density_el" export="1" align="expand" validator="float">
					<tooltip>Density of the shape</tooltip>
					<callback type="pressed,focus_out">Nodes::Object::Shape::density_pressed</callback>
				</editline>
				
				<label align="right"><text>Friction:</text></label>
				<editline name="Nodes::Object::Shape::friction_el" export="1" align="expand" validator="float">
					<callback type="pressed,focus_out">Nodes::Object::Shape::friction_pressed</callback>
				</editline>
				<hslider name="Nodes::Object::Shape::friction_sl" export="1" align="expand" min="0" max="4000">
					<callback type="clicked">Nodes::slider_clicked</callback>
					<attach multiplier="1000" flags="max_expand">Nodes::Object::Shape::friction_el</attach>
				</hslider>
				<vbox/>
				
				<label align="right"><text>Restitution:</text></label>
				<editline name="Nodes::Object::Shape::restitution_el" export="1" align="expand" validator="float">
					<callback type="pressed,focus_out">Nodes::Object::Shape::restitution_pressed</callback>
				</editline>
				<hslider name="Nodes::Object::Shape::restitution_sl" export="1" align="expand" min="0" max="1000">
					<callback type="clicked">Nodes::slider_clicked</callback>
					<attach multiplier="1000">Nodes::Object::Shape::restitution_el</attach>
				</hslider>
				<vbox/>
				
			</gridbox>
			
			<vbox space="2"/>
			<vbox name="Nodes::Object::Shape::dummy_vb" export="1"/>
			<vbox space="2"/>
			
			<gridbox align="expand" columns="4" space="4">
				<attach>shape_parameters_gb</attach>
				
				<label align="right"><text>Position:</text></label>
				<editline name="Nodes::Object::Shape::translate_el[0]" export="1" align="expand" validator="float">
					<callback type="pressed,focus_out">Nodes::Object::Shape::transform_pressed</callback>
				</editline>
				<editline name="Nodes::Object::Shape::translate_el[1]" export="1" align="expand" validator="float">
					<callback type="pressed,focus_out">Nodes::Object::Shape::transform_pressed</callback>
				</editline>
				<editline name="Nodes::Object::Shape::translate_el[2]" export="1" align="expand" validator="float">
					<callback type="pressed,focus_out">Nodes::Object::Shape::transform_pressed</callback>
				</editline>
				
				<label align="right"><text>Rotation:</text></label>
				<editline name="Nodes::Object::Shape::rotate_el[0]" export="1" align="expand" validator="float">
					<callback type="pressed,focus_out">Nodes::Object::Shape::transform_pressed</callback>
				</editline>
				<editline name="Nodes::Object::Shape::rotate_el[1]" export="1" align="expand" validator="float">
					<callback type="pressed,focus_out">Nodes::Object::Shape::transform_pressed</callback>
				</editline>
				<editline name="Nodes::Object::Shape::rotate_el[2]" export="1" align="expand" validator="float">
					<callback type="pressed,focus_out">Nodes::Object::Shape::transform_pressed</callback>
				</editline>
				
			</gridbox>
		</vbox>
		
	</vbox>
</vbox>

